{% extends "base.njk" %}

{% block content %}
	
<section id="event" class="flex-col" >	
	<div class="title">
		<h1>{{ title }}</h1>
		{% if date %}<date>{{ date | readableDate }}</date>{% endif %}
	</div>

	<img class="poster flex-child" src="/img/posters/{{ poster }}"></img>

	<article id="description" class="flex-child">
	<h2>{{ blurb }}</h2>
	{{ content | safe }}
	</article>
</section>

<hr>

<section class="frame" style="--frameBg: var(--grey)">
	<h1>
		<a href="/events/">See more events.</a>
	</h1>
</section>

{% endblock %}